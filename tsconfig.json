{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "skipLibCheck": true,
    "declaration": true,         // Gera arquivos .d.ts para cada arquivo .ts ,
    "outDir": "./dist",
  },
  "include": [
    "./src/**/*.ts","test/**/*.ts","./index.ts" ,"**/*.spec.ts"  ],
  "exclude":[
     "./**/*.d.ts",
     "./dist",
     "./demos/*",
     "./**/bin/*",
     "./types",
     "./node_modules",
  ]
  , 
    "typeRoots": [
        "node_modules/@types"
    ]
}
